{
	"compilerOptions": {
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"],
			"@components/*": ["src/components/*"],
			"@pages/*": ["src/pages/*"],
			"@images/*": ["src/images/*"],
			"@redux/*": ["src/redux/*"],
			"@hooks/*": ["src/hooks/*"],
			"@types/*": ["src/types/*"],
			"@assets/*": ["src/assets/*"],
			"@styled/*": ["src/styled/*"],
			"@public/*": ["public/*"]
		},
		"outDir": "./dist/",
		"module": "commonjs",
		"target": "es5",
		"jsx": "react",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"allowJs": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"sourceMap": true
	},
	"exclude": ["node_modules"],
	"include": ["src/**/*.tsx", "src/**/*.ts"]
}
